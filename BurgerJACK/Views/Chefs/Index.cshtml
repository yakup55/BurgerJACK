@using EntityLayerr.Concerete
@model List<ChecfsSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Burger_Layout.cshtml";
}

<div class="team py-5" id="chefs">
    <div class="container-fluid py-xl-5 py-lg-3">
        <div class="title-section text-center mb-md-5 mb-4">
            <h3 class="w3ls-title mb-3">Bizim <span>Şeflerimiz</span></h3>
        </div>
       
        <div class="row team-bottom pt-4">
            @foreach (var x in Model)
            {
                <div class="col-lg-3 col-6 team-grid">

                    <a href="#team"><img src="@x.Chefs.Checfsİmage" class="img-fluid" alt="" height="1000" width="500"></a>
                    <div class="caption">
                        <div class="team-text">
                            <h2><a>@x.Chefs.ChefsNameSurName</a></h2>
                            <h4><a>@x.Chefs.ChecfsAbout</a></h4>
                            <h4><a>@x.Chefs.ChefsAge Yaşında</a></h4>
                        </div>
                        <ul>
                            <li>
                                <a href="@x.ChecfsFacebook">
                                    <i class="fa fa-facebook f1" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li>
                                <a href="@x.Checfsİnstagram">
                                    <i class="fa fa-twitter f2" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li>
                                <a href="@x.ChecfsLinkedin">
                                    <i class="fa fa-google-plus f3" aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    
                </div>
            }   
            </div>
        
    </div>
</div>

