@using EntityLayerr.Concerete
@model List<Burger>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Burger_Layout.cshtml";
}
<section class="portfolio py-5">
    <div class="container py-xl-5 py-lg-3">
        <div class="title-section text-center mb-md-5 mb-4">
            <h3 class="w3ls-title mb-3">Bizim <span>Menu</span></h3>
        </div>
       
        <div class="row mt-4">
            @foreach (var x in Model)
            {
                <div class="col-md-4">
                    <div class="gallery-demo">
                        <a href="#gal1">
                            <img src="@x.BurgerImage" alt=" " class="img-fluid" height="200"width="400" />
                            <h4 class="p-mask">@x.BurgerName - <span>@x.BurgerPrice TL</span></h4>
                        </a>
                    </div>
                </div>
            }
            </div>
        </div>
</section>
    
<!-- gallery model-->
<!-- gallery popup 1 -->
@foreach (var y in Model)
{
<div id="gal1" class="pop-overlay">
    <div class="popup">
        <img class="img-fluid" src="@y.BurgerImage" alt="">
        <h4 class="p-mask">@y.BurgerName- - <span>@y.BurgerPrice TL</span></h4>
        <a href="/Burger/Burgerİnformation/@y.İD" class="button-w3ls active mt-3">
           Daha Fazla
            <span class="fa fa-caret-right ml-1" aria-hidden="true"></span>
        </a>
        <a class="close" href="#gallery">×</a>
    </div>
</div>
}